<%- model_class = Wine -%>
<div class="page-header">
  <h1><%=t '.title', :default => Wine %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @wine.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:critics_score) %></dt>
      <dd><pre class="prettyprint"><%= @wine.critics_score %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:average_user_rating) %></dt>
      <dd><pre class="prettyprint"><%= @wine.average_user_rating %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:food_suggestion) %></dt>
      <dd><pre class="prettyprint"><%= @wine.food_suggestion %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:wine_style) %></dt>
      <dd><pre class="prettyprint"><%= @wine.wine_style %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:awards) %></dt>
      <dd><pre class="prettyprint"><%= @wine.awards %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @wine.notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extra) %></dt>
      <dd><pre class="prettyprint"><%= @wine.extra %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              wines_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wine_path(@wine), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wine_path(@wine),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

