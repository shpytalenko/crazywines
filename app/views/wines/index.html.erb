<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Critics score</th>
      <th>Average user rating</th>
      <th>Food suggestion</th>
      <th>Wine style</th>
      <th>Awards</th>
      <th>Notes</th>
      <th>Producer</th>
      <th>Region</th>
      <th>Extra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.title %></td>
        <td><%= wine.critics_score %></td>
        <td><%= wine.average_user_rating %></td>
        <td><%= wine.food_suggestion %></td>
        <td><%= wine.wine_style %></td>
        <td><%= wine.awards %></td>
        <td><%= wine.notes %></td>
        <td><%= wine.producer %></td>
        <td><%= wine.region %></td>
        <td><%= wine.extra %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

